api_key = "<%= node['appcanary']['agent']['api_key'] %>"

<% case node['platform'] %>
<% when 'ubuntu', 'debian' %>
[[files]]
path = "/var/lib/dpkg/status"
<% when 'centos', 'redhat', 'amazon', 'scientific', 'oracle' %>
[[files]]
process = 'rpm -qa'
<% end %>

<% node['appcanary']['agent']['paths'].each do |path| %>
[[files]]
path = "<%= path %>"

<% end %>
